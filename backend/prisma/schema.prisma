generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  username String @unique 
  password String
  img UserImage?
  recipes Recipe[]
  reviews Review[]
}

model UserImage {
  id String @id @default(uuid())
  name String
  url String
  user User @relation(fields: [userid], references: [id])
  userid String @unique
}

model Recipe {
  id String @id @default(uuid())
  title String
  description String
  ingredients String[]
  instructions String[]
  nutvalue Int
  img RecipeImage?
  writer User @relation(fields: [writerid], references: [id])
  writerid String
  rating Int?
  reviews Review[]
  category String
}

model RecipeImage {
  id String @id @default(uuid())
  name String
  url String
  recipe Recipe @relation(fields: [recipeid], references: [id])
  recipeid String @unique
}

model Review {
  id String @id @default(uuid())
  title String
  description String
  rating Int
  writer User @relation(fields: [writerid], references: [id])
  writerid String
  recipe Recipe @relation(fields: [recipeid], references: [id])
  recipeid String
}